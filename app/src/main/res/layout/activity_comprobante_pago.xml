<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comvacio">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:gravity="center">

        <!-- TextView para mostrar el estado del pago -->
        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:textColor="#18A4E6"
            android:textSize="18sp" />

        <!-- TextView para mostrar la fecha y hora -->
        <TextView
            android:id="@+id/txtFechaHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- TextView para mostrar el valor pagado -->
        <TextView
            android:id="@+id/txtValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- TextView para mostrar la referencia -->
        <TextView
            android:id="@+id/txtReferencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- TextView para mostrar el Código Nura -->
        <TextView
            android:id="@+id/txtCodigoNura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- TextView para mostrar el NIT -->
        <TextView
            android:id="@+id/txtNit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- TextView para mostrar el Banco -->
        <TextView
            android:id="@+id/txtBanco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- TextView para mostrar el Medio de pago -->
        <TextView
            android:id="@+id/txtMedioPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- TextView para mostrar la Autorización -->
        <TextView
            android:id="@+id/txtAutorizacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- TextView para mostrar los Datos del Usuario -->
        <TextView
            android:id="@+id/txtDatosUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Botón para finalizar el comprobante -->
        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finalizar"
            android:layout_marginTop="24dp"
            android:textColor="#FFFFFF"
            android:background="#007BFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7FC">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="158dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imginfopse" />

    <TextView
        android:id="@+id/number1"
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="419dp"
        android:background="@drawable/borde"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/number2"
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/borde"

        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/number1"
        app:layout_constraintEnd_toStartOf="@+id/number3"
        app:layout_constraintStart_toEndOf="@+id/number1" />

    <TextView
        android:id="@+id/number3"
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:layout_marginStart="-13dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/borde"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/number2"
        app:layout_constraintEnd_toStartOf="@+id/number4"
        app:layout_constraintStart_toEndOf="@+id/number2" />

    <TextView
        android:id="@+id/number4"
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:layout_marginStart="-13dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/borde"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/number3"
        app:layout_constraintEnd_toStartOf="@+id/number5"
        app:layout_constraintStart_toEndOf="@+id/number3" />

    <TextView
        android:id="@+id/number5"
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:layout_marginStart="-13dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/borde"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/number4"
        app:layout_constraintEnd_toStartOf="@+id/number6"
        app:layout_constraintStart_toEndOf="@+id/number4" />

    <TextView
        android:id="@+id/number6"
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:layout_marginStart="-13dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/borde"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/number5"
        app:layout_constraintEnd_toStartOf="@+id/number7"
        app:layout_constraintStart_toEndOf="@+id/number5" />

    <TextView
        android:id="@+id/number7"
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:layout_marginStart="-13dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/borde"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/number6"
        app:layout_constraintEnd_toStartOf="@+id/number8"
        app:layout_constraintStart_toEndOf="@+id/number6" />

    <TextView
        android:id="@+id/number8"
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:layout_marginStart="-13dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/borde"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/number7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/number7" />

    <ImageButton
        android:id="@+id/botonCopy"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/number8"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icon_copy" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/imginfocuenta" />

</androidx.constraintlayout.widget.ConstraintLayout>